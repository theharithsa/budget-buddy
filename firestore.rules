rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User's private data - only accessible by the user themselves
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Public categories - readable by all authenticated users, writable by any authenticated user
    match /publicCategories/{categoryId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && (
        // Allow creating new public categories
        resource == null ||
        // Allow updating only if the user is the original creator
        resource.data.userId == request.auth.uid
      );
    }
  }
}